*
    box-sizing: border-box

html
body
    margin: 0
    padding: 0

html
    height: 100%
    font-size: 10px

body
    position: relative
    min-height: 100%
    padding-bottom: 36px

.app-button
    padding: 12px 8px
    border: 0
    background: none
    border-radius: 2px
    font-size: 1.4rem
    cursor: pointer

    &-default
        background: #ffffff
        box-shadow: inset 0px 0px 1px 1px #487FFF
        color: #487FFF

        &:hover
            box-shadow: inset 0px 0px 3px 1px darken(#487FFF, 10%)

    &-primary
        background: #487FFF
        color: #ffffff

        &:hover
            background: darken(#487FFF, 10%)
            

    &-warn
        background: #FFC6C5
        color: #FFFFFF
        
        &:hover
            background: darken(#FFC6C5, 10%)

    &-full-width
        width: 100%

    &__inner
        display: flex
        align-items: center

    &__icon
        font-size: 1.8rem
        line-height: 1

    &__text
        margin-left: auto
        margin-right: auto

.app-input
    padding: 12px 8px
    border: none
    background: #FFFFFF
    box-shadow: inset 0px 0px 1px 0 #487FFF
    border-radius: 2px
    font-size: 1.4rem

