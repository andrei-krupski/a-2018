.loading-block
    position: fixed;
    display: flex;
    align-items:center;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.2);

    &__loader,
    &__loader:after
        border-radius: 50%;
        width: 10em;
        height: 10em;

    &__loader {
        margin: 60px auto;
        font-size: 10px;
        position: relative;
        text-indent: -9999em;
        border-top: 1.1em solid rgba(255, 255, 255, 0.3);
        border-right: 1.1em solid rgba(255, 255, 255, 0.3);
        border-bottom: 1.1em solid rgba(255, 255, 255, 0.3);
        border-left: 1.1em solid #487fff;
        transform: translateZ(0);
        animation: load_animation 1.1s infinite linear;
    }

@keyframes load_animation {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
