.breadcrumbs
    padding: 10px
    background: #FFFFFF
    border-top: 1px solid #cccccc
    border-bottom: 1px solid #cccccc
    font-size: 1.2rem

    &__list
        margin: 0
        padding: 0
        list-style: none
        overflow: auto

    &__list-item
        float: left
        overflow: hidden

        &::after
            content: '\2192'
            display: inline-block
            padding: 0 5px
            font-size: 1.8rem
            line-height: 0
            color: #487fff
            vertical-align: -1px

        &:last-child::after
            display: none


    &__path
        color: #bbbbbb
